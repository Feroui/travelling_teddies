<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
    <% @teddies.each do |teddy| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('passport_background.jpg');">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2>Some stuff</h2>
          <p>Very cool stuff, useful and smart</p>
        </div>
        <img class="card-user avatar" src="teddy_marker.jpg">
        <a class="card-link" href="#" ></a>
      </div>
    <%end%>
    </div>

    <div class="col-xs-12 col-sm-6 nopadding">
      <div id="index-map" class="wider-container">

      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'index-map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
            });
          });
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
