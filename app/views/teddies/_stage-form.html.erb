<h1>Write your adventure with <%=@teddy.name%></h1>

<div id="inputs">
  <%= simple_form_for([teddy, stage], remote: true) do |f| %>
    <div id= "first-part">
      <h2>First, tell us more about you</h2>
      <%= f.input :backpacker_name, placeholder: "Your name", label: false %>
      <%= f.input :backpacker_origin, placeholder: "Where do you come from ?", label: false%>
      <%= f.input :backpacker_description, placeholder: 'Who are you ? (in a few words)', label:false %>
      <%= f.input :backpacker_email, placeholder: "Leave your email to communicate with Teddy's owner", label: 'Optionnal' %>
      <%#= f.input :photo %>
      <%#= f.input :photo_cache, as: :hidden %>
      <div class="first-next-btn">
        <i class="fa fa-arrow-down" />
      </div>
    </div>

    <div id= "second-part" class="hide">
      <h2>What's up with you and <%=teddy.name%></h2>
      <%= f.input :adress, placeholder: 'Where are you ?', label:false %>
      <div class= "datepicker">
        <%= f.input :date, value: Time.now, label: 'Date'%>
      </div>
      <div class="second-next-btn">
        <i class="fa fa-arrow-down" />
      </div>
    </div>

    <div id= 'third-part' class="hide">
      <h2>Share your story...</h2>
      <%#= f.input :title, placeholder: 'Give a title to your stage article', label:false %>
      <%= f.input :content, placeholder: 'Describe your stay, what did you eat, what did you visit, who did you meet ? Share an anecdote, a funny story, your emotions...', label:false, :input_html => {:rows => 9} %>
      <%= f.input :crush, placeholder: "Your crush", label:false %>
      <div class="attach-form">
        <h2>...and some pictures !</h2>
        <div class="input-center">
        <%= f.input :photos, as: :attachinary, label:false %>
        <%#= f.input :photo_cache, as: :hidden %>
        </div>
        <%= hidden_field_tag :code, @teddy.code %>
      </div>
      <div class="btn-save">
        <%= f.submit 'Save my stage', :class => "btn btn-primary" %>
      </div>
    </div>

  <% end %>
</div>


